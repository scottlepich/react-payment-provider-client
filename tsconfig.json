{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@opentable/webstack-tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
    "rootDir": "./src",
    "outDir": "dist",
    "noErrorTruncation": true,
    "declaration": true,
    "sourceMap": false
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./src/**.test.ts", "node_modules", "dist"]
}
