{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@opentable/webstack-tsconfig/base.json",
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "declaration": false,
      "emitDeclarationOnly": false
    }
  },
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
    "noErrorTruncation": true,
    "outDir": "dist",
    "paths": {
      "~spreedly/*": ["./src/spreedly/*"],
      "~types/*": ["./src/types/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "exclude": ["./src/**.test.ts", "node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
