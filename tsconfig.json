{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@opentable/webstack-tsconfig/base.json",
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
    "noErrorTruncation": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": false,
    "allowJs": true
  },
  "exclude": ["./src/**.test.ts", "node_modules", "dist"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
