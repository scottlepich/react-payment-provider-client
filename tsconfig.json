{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**.test.ts", "node_modules"]
}
